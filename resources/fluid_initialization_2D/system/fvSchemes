FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fluxScheme      HLLC;

ddtSchemes
{
    default         Euler;
    timeIntegrator  RK2SSP 3;
}

gradSchemes
{
    default         cellMDLimited leastSquares 1.0;
}

divSchemes
{
    default             none;
    div(alphaRhoPhi.tnt,lambda.tnt) Riemann;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

scheme quadraticMUSCL;
interpolationSchemes
{
    default             linear;
    reconstruct(alpha)  $scheme SuperBee;
    reconstruct(rho)    $scheme SuperBee;
    reconstruct(U)      $scheme SuperBee;
    reconstruct(e)      $scheme SuperBee;
    reconstruct(p)      $scheme SuperBee;
    reconstruct(speedOfSound) $scheme SuperBee;
    reconstruct(lambda.tnt) $scheme SuperBee;
}

snGradSchemes
{
    default         corrected;
}

wallDist
{
    method meshWave;
}


